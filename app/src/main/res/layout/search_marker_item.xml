<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="6dp"
    tools:theme="@style/Theme.Temzone">

    <ImageView
        android:id="@+id/marker_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/marker_image_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_landmark" />

    <TextView
        android:id="@+id/title_text_view"
        style="@style/TextAppearance.Temzone.Search.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marker_image_view"
        app:layout_constraintTop_toTopOf="@+id/marker_image_view"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/subtitle_text_view"
        style="@style/TextAppearance.Temzone.Search.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/marker_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marker_image_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view"
        tools:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>
