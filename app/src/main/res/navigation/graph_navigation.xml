<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_navigation"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.temtem.interactive.map.temzone.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/from_login_fragment_to_map_fragment"
            app:destination="@id/map_fragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/graph_navigation"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.temtem.interactive.map.temzone.ui.map.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/map_fragment">

        <action
            android:id="@+id/from_map_fragment_to_map_layers_dialog_fragment"
            app:destination="@id/map_layers_dialog_fragment" />

    </fragment>

    <dialog
        android:id="@+id/map_layers_dialog_fragment"
        android:name="com.temtem.interactive.map.temzone.ui.map.MapLayersDialogFragment"
        android:label="MapLayersDialogFragment"
        tools:layout="@layout/map_layers_dialog_fragment" />

</navigation>
