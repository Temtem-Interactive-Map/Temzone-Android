<resources>

    <style name="Theme.Temzone.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Temzone</item>
    </style>

    <style name="Theme.Temzone" parent="Theme.Material3.Light.NoActionBar">
        <!-- System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="elevationOverlayEnabled">false</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/fun_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/pattens_blue</item>
        <item name="colorOnPrimaryContainer">@color/midnight</item>
        <item name="colorSecondary">@color/shuttle_gray</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">@color/moon_raker</item>
        <item name="colorOnSecondaryContainer">@color/big_stone</item>
        <item name="colorTertiary">@color/vin_rouge</item>
        <item name="colorOnTertiary">@android:color/white</item>
        <item name="colorTertiaryContainer">@color/cosmos</item>
        <item name="colorOnTertiaryContainer">@color/toledo</item>
        <item name="colorError">@color/thunderbird</item>
        <item name="colorErrorContainer">@color/peach_schnapps</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorOnErrorContainer">@color/temptress</item>
        <item name="android:colorBackground">@color/magnolia</item>
        <item name="colorOnBackground">@color/shark</item>
        <item name="colorSurface">@color/magnolia</item>
        <item name="colorOnSurface">@color/shark</item>
        <item name="colorSurfaceVariant">@color/mystic</item>
        <item name="colorOnSurfaceVariant">@color/mako</item>
        <item name="colorOutline">@color/pale_sky</item>
        <item name="colorOnSurfaceInverse">@color/athens_gray</item>
        <item name="colorSurfaceInverse">@color/tap_shoe</item>
        <item name="colorPrimaryInverse">@color/anakiwa</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Temzone.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Temzone.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.Temzone.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Temzone.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">
            @style/TextAppearance.Temzone.HeadlineMedium
        </item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Temzone.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Temzone.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Temzone.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Temzone.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Temzone.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Temzone.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Temzone.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Temzone.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Temzone.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Temzone.LabelSmall</item>

        <!-- Custom styles -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Temzone.BottomSheetDialog</item>
    </style>

</resources>
