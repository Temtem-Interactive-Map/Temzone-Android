<resources>

    <!-- Link typography -->
    <style name="TextAppearance.Temzone.Link" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="TextAppearance.Temzone.Link.Bold" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Search typography -->
    <style name="TextAppearance.Temzone.Search.Title" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Temzone.Search.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Setting typography -->
    <style name="TextAppearance.Temzone.Setting" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:minWidth">@dimen/default_width</item>
        <item name="android:maxWidth">@dimen/default_width</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Map layer floating action button -->
    <style name="Widget.Temzone.FloatingActionButton.MapLayer" parent="Base.Widget.Material3.FloatingActionButton.Small">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Temzone.FloatingActionButton.Small
        </item>
    </style>

    <style name="ThemeOverlay.Temzone.FloatingActionButton.Small" parent="">
        <item name="colorContainer">?attr/colorSurface</item>
        <item name="colorOnContainer">?attr/colorOnSurface</item>
    </style>

    <!-- Google button -->
    <style name="Widget.Temzone.Button.Google" parent="Widget.Material3.Button.TonalButton.Icon">
        <item name="android:minWidth">@dimen/default_width</item>
        <item name="android:maxWidth">@dimen/default_width</item>
        <item name="android:text">@string/google_button_text</item>
        <item name="icon">@drawable/ic_google_24</item>
        <item name="iconTint">@null</item>
    </style>

    <!-- Bottom sheet -->
    <style name="Widget.Temzone.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:maxWidth">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

</resources>
